.movies-show
  %h1= @movie.title
  .row.movie-wrapper
    .col-md-4
      = image_tag @movie.poster_url, alt: @movie.title, class: 'poster-image'
    .col-md-8
      %section
        %h3.subtitle Rating
        = @movie.rating
      %section
        %h3.subtitle Plot Overview
        = @movie.plot
      %section
        %h3.subtitle Description
        = @movie.description
      %section
        - if user_signed_in?
          %p= link_to 'Email me details about this movie', send_info_movie_path(@movie), class: 'btn btn-sm btn-default'
